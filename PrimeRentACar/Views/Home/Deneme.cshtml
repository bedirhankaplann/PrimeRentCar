@using PrimeRentACar.Models

@model DateModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Prime Car</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <script>
        $(document).ready(function () {
            $('#datepicker').datepicker({
                uiLibrary: 'bootstrap',
                showOptions: { direction: "down" },
                dateFormat: "dd-mm-yy",
                altFormat: "yy-mm-dd",
                altField: "#tarih-db",
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                dayNamesMin: ["Pa", "Pt", "Sl", "Ça", "Pe", "Cu", "Ct"],
                firstDay: 1

            });
        });
        $(document).ready(function () {
            $('#datepicker2').datepicker({
                uiLibrary: 'bootstrap',
                showOptions: { direction: "down" },
                dateFormat: "dd-mm-yy",
                altFormat: "yy-mm-dd",
                altField: "#tarih-db",
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                dayNamesMin: ["Pa", "Pt", "Sl", "Ça", "Pe", "Cu", "Ct"],
                firstDay: 1

            });
        });

    </script>
    <style>

        #navbar {
            overflow: hidden;
            background-color: #333;
        }

            #navbar a {
                float: left;
                display: block;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                #navbar a:hover {
                    background-color: #ddd;
                    color: black;
                }

                #navbar a.active {
                    background-color: #4CAF50;
                    color: white;
                }

        .content {
            padding: 16px;
        }

        .sticky {
            position: fixed;
            top: 0;
            width: 100%;
        }

            .sticky + .content {
                padding-top: 60px;
            }
    </style>
</head>
<body>

    <div class="row ">
        <div class="col-md-4">
            @using (Html.BeginForm("Index", "Home", null, FormMethod.Post, new { style = "height:300px; max-width: 1250px; margin: 0 auto;  background-color: #ed5504;" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-row align-items-center">
                    <table border="0">
                        <tr>
                            <td>
                                <h4 class="lead text-white" style="margin-top:20px; margin-bottom:20px; text-align:center; margin-left:11px;"><strong>Yola Bizimle Çıkın</strong></h4>

                            </td>
                        </tr>
                        <tr>
                            <td>
                                <!--Alış Tarihi için DatePicker-->
                                <div class="col-auto my-1 ">
                                    <div class="custom-control custom-checkbox mr-sm-2">
                                        @Html.EditorFor(model => model.rentStartDate,
                                                            new
                                                                 {
                                                                     htmlAttributes = new
                                                                     {

                                                                         @placeholder = "Alış Tarhini Seçiniz",
                                                                         @readonly = true,
                                                                @class = "form-control ",
                                                                         @id = "datepicker",
                                                                         @type = "text",
                                                                         @style = "width:300px; margin-left:-11px;"
                                                                     }
                                         })

                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <!--İade Tarihi için DatePicker-->
                                <div class="col-auto my-1">
                                    <div class="custom-control custom-checkbox mr-sm-2">
                                        <!--<input id="datepicker2" width="250" placeholder="İade Tarhini Seçiniz" />-->
                                        @Html.EditorFor(model => model.rentEndDate, new
                                        {
                                            htmlAttributes = new
                                            {
                                                @placeholder = "İade Tarhini Seçiniz",
                                                @readonly = true,
                                                @class = "form-control ",
                                                @id = "datepicker2",
                                                @style = "width:300px; margin-left:-11px;"
                                            }
                                       })
                                    </div>
                                </div>
                            </td>
                        </tr>
                      
                        <tr>
                            <td>
                                <div class="col-auto my-1">
                                    <button type="submit" class="btn btn-light lead" style=" margin-top:10px; float:right"><img src="https://img.icons8.com/ios/25/000000/car-badge.png" />&nbsp;Kirala</button>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            }
        </div>
        <!--<form class="" style="max-width: 1250px; margin: 0 auto; padding: 15px; background-color: #ed5504;" method="post">-->

    </div>



    <link href="dist/css/datepicker.min.css" rel="stylesheet" type="text/css">
    <script src="dist/js/datepicker.min.js"></script>
    <!-- Include English language -->
    <script src="dist/js/i18n/datepicker.en.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.0/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>



